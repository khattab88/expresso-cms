extends base

block content

    .row
        .col
        
            .app-page-title.mb-0.py-2
                .page-title-wrapper
                    .page-title-heading
                        h1= `Category: ${title}`

    .row
        .col-lg-6

          .main-card.mb-3.mt-3.card
            .card-body

              form(method='POST', action='/categories')
                input#id(type='hidden' name='id' value=`${category.id}`)
                
                .position-relative.form-group
                  label(for='name') Name
                  input#name.form-control(name='name' placeholder='Name' type='text' value=`${category.name}` required)

                .d-flex.justify-content-end.pt-3
                    button.mt-1.mr-2.btn.btn-success Submit
                    a.mt-1.btn.btn-danger(href="/categories") Cancel
extends base

block content

    .row
        .col
        
            .app-page-title.mb-0.py-2
                .page-title-wrapper.d-flex.justify-content-between
                    h1= title
                    a.btn.btn-lg.btn-success(href='/areas/new') Create New

    .row
        .col-lg-10

            .main-card.mb-3.card.mt-3
                .card-body
                    table.mb-0.mt-0.table.table-striped.table-hover
                        thead
                            tr
                                th #
                                th.text-center Name
                                th.text-center.d-none.d-sm-table-cell Slug
                                th.text-center.d-none.d-sm-table-cell Country
                                th.text-center City
                                th 
                        tbody
                            - var x = 0
                            each area in areas
                                tr
                                    th.text-center(scope='row') #{++x}
                                    td.text-center= area.name
                                    td.text-center.d-none.d-sm-table-cell= area.slug
                                    td.text-center.d-none.d-sm-table-cell= area.city.country.name
                                    td.text-center= area.city.name
                                    td.text-center
                                        .row-manage
                                            .row-manage__btn: a(href=`/areas/${area.id}` data-id=`${area.id}`) Edit
                                            .row-manage__separator: span |
                                            .row-manage__btn: a.delete-btn.text-danger(data-type="areas" data-id=`${area.id}`) Delete


block append scripts
    script(src='/js/delete-list-item.js')
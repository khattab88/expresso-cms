extends base

block content

  .row
    .col
      .app-page-title.mb-0.py-2
        .page-title-wrapper
          .page-title-heading
            h1= `Country: ${title}`

  .row
    .col-lg-6
    
      .main-card.mb-3.mt-3.card
        .card-body
        
          form(method='GET')
            .position-relative.form-group
              label(for='name') Name
              input#name.form-control(name='name' placeholder='Name' type='text' value=`${country.name}` disabled)
            .position-relative.form-group
              label(for='alias') Alias
              input#alias.form-control(name='alias' placeholder='Alias' type='text' value=`${country.alias}` disabled)
            .position-relative.form-group
              label(for='currency') Currency
              select#currency.form-control(name='currency' disabled)
                option USD
                option(selected) EGP
                option AED
                option SAR
                option QAR
                option KWD
            .position-relative.form-group
              label(for='image') Image
              image.img-thumbnail(src=`${country.image}` alt=`${country.name}`)
              .col-sm-10
                input#exampleFile.form-control-file(name='file' type='file')
                small.form-text.text-muted
                  | Image types supported (.jpg, .png, ...)

            .d-flex.justify-content-end.pt-3
              button.mt-1.mr-2.btn.btn-success Submit
              button.mt-1.btn.btn-danger Cancel




